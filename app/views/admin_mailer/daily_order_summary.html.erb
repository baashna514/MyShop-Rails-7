<!-- app/views/admin_mailer/daily_order_summary.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <style>
      table {
          width: 100%;
          border-collapse: collapse;
          margin-top: 20px;
      }

      th, td {
          border: 1px solid #ddd;
          padding: 8px;
          text-align: left;
      }

      th {
          background-color: #f2f2f2;
      }
  </style>
</head>
<body>

<h1>Daily Order Summary</h1>

<table>
  <thead>
  <tr>
    <th>SR#</th>
    <th>Date</th>
    <th>Customer</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Address</th>
    <th>City</th>
    <th>Status</th>
    <th>Payment Method</th>
    <th>Details</th>
  </tr>
  </thead>
  <tbody>
  <% @orders.each_with_index do |order, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= order.order_date %></td>
      <td><%= order.user.name %></td>
      <td><%= order.phone %></td>
      <td><%= order.email %></td>
      <td><%= order.address %></td>
      <td><%= order.city %></td>
      <td><%= order.status %></td>
      <td><%= order.payment_method %></td>
      <td>
        <table class="table table-bordered m-0">
          <thead>
          <tr>
            <th>Product</th>
            <th>quantity</th>
            <th>price</th>
            <th>Total</th>
          </tr>
          </thead>
          <tbody>
          <% order.order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.product.p_name %></td>
              <td><%= order_item.quantity %></td>
              <td><%= order_item.price %></td>
              <td><b><%= order_item.price * order_item.quantity %></b></td>
            </tr>
          <%end %>
          </tbody>
        </table>
      </td>
    </tr>
  <%end %>
  </tbody>
</table>

</body>
</html>
