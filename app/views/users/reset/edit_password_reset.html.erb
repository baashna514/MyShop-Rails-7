<!-- Section: Design Block -->
<section class="">
  <!-- Background image -->
  <div class="p-5 bg-image" style="
  background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
    height: 300px;
  "></div>
  <!-- Background image -->

  <div class="card mx-4 mx-md-5 shadow-5-strong" style="
  margin-top: -100px;
    background: hsla(0, 0%, 100%, 0.8);
    backdrop-filter: blur(30px);
  ">
    <div class="card-body py-5 px-md-5">

      <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
          <% flash.each do |type, messages| %>
            <div class="alert <%= flash_class(type) %>">
              <% Array(messages).each do |message| %>
                <li><%= message %></li>
              <% end %>
            </div>
          <% end %>
          <h2 class="fw-bold mb-5 text-center">Change Password</h2>
          <%= form_with(model: @user, :html => {class: "form-horizontal", role: "form"}, url: reset_password_path(token: @user.reset_password_token)) do |f| %>
            <div class="row">

              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <%= f.label :password %>
                  <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-outline">
                  <%= f.label :password_confirmation %>
                  <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
                </div>
              </div>

            </div>

            <!-- Submit button -->
            <%= f.submit "Update Password", class: "btn btn-primary btn-sm" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Section: Design Block -->